<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/card_width"
    android:layout_height="@dimen/card_height"
    android:layout_marginStart="@dimen/_5sdp"
    android:background="@drawable/container_disabled"
    android:orientation="vertical"
    android:paddingStart="@dimen/_20sdp"
    android:paddingTop="@dimen/_10sdp"
    android:paddingEnd="@dimen/_20sdp"
    android:paddingBottom="@dimen/_15sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/coin_detail_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/rl_redeem_view"
            android:layout_marginTop="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_toStartOf="@+id/iv_coin_100_1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_heart"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:src="@drawable/ic_heart"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/disp_name"
                        style="@style/AppTheme.Widget.TextView.ExtraBold"
                        android:layout_gravity="center_vertical"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:text="@string/corktown"
                        android:textColor="@color/blue_11"
                        android:textSize="@dimen/_13ssp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/disp_address"
                    style="@style/AppTheme.Widget.TextView"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lineSpacingMultiplier="1.1"
                    android:maxLines="3"
                    android:text="@string/address"
                    android:textColor="@color/blue_11_70"
                    android:textSize="@dimen/_11ssp"

                    />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_coin_100_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/coin_5" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_redeem_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_10sdp">

            <TextView
                android:id="@+id/tv_dis_redeem"
                style="@style/AppTheme.Widget.TextView.SemiBold"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackground"
                android:text="@string/learn_more"
                android:textColor="@color/yellow_68"
                android:textSize="@dimen/_12sdp" />

            <ImageView
                android:id="@+id/iv_dis_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_5sdp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/arrow_yellow" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/settings_bg_header"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_main_container"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white_90"
    tools:context=".fragments.SettingsFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tv_logout"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_153sdp"
                android:background="@drawable/settings_bg_header"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        style="@style/AppTheme.Widget.TextView.SemiBold"
                        android:text="@string/settings"
                        android:textAllCaps="true"
                        android:textColor="@color/yellow_68"
                        android:textSize="@dimen/_10sdp" />

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/iv_user_profile"
                        android:layout_width="@dimen/_65sdp"
                        android:layout_height="@dimen/_65sdp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/user_placeholder"
                        app:riv_border_color="@color/blue_11"
                        app:riv_border_width="@dimen/_1sdp"
                        app:riv_corner_radius="@dimen/_50sdp"/>

                    <TextView
                        android:id="@+id/tv_username"
                        style="@style/AppTheme.Widget.TextView.SemiBold"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:text="@string/itsagoodthang"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_profile"
                    style="@style/settings_option_container"
                    android:layout_marginTop="@dimen/_12sdp">

                    <TextView
                        android:id="@+id/tv_profile"
                        style="@style/AppTheme.Widget.TextView.SemiBold"
                        android:layout_centerVertical="true"
                        android:text="@string/profile"
                        android:textSize="@dimen/_13ssp"
                        android:textColor="@color/blue_11" />

                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_next" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_below="@id/tv_profile"
                        android:layout_marginTop="@dimen/_14sdp"
                        android:background="@color/disabled_tab_border" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_notification"
                    style="@style/settings_option_container">

                    <TextView
                        android:id="@+id/tv_notification_settings"
                        style="@style/AppTheme.Widget.TextView.SemiBold"
                        android:layout_centerVertical="true"
                        android:text="@string/notification_settings"
                        android:textSize="@dimen/_13ssp"
                        android:textColor="@color/blue_11" />

                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_next" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_below="@id/tv_notification_settings"
                        android:layout_marginTop="@dimen/_14sdp"
                        android:background="@color/disabled_tab_border" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_terms"
                    style="@style/settings_option_container">

                    <TextView
                        android:id="@+id/tv_terms_and_conditions"
                        style="@style/AppTheme.Widget.TextView.SemiBold"
                        android:layout_centerVertical="true"
                        android:text="@string/terms_and_conditions"
                        android:textSize="@dimen/_13ssp"
                        android:textColor="@color/blue_11" />

                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_next" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_below="@id/tv_terms_and_conditions"
                        android:layout_marginTop="@dimen/_14sdp"
                        android:background="@color/disabled_tab_border" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_privacy"
                    style="@style/settings_option_container">

                    <TextView
                        android:id="@+id/tv_privacy_statement"
                        style="@style/AppTheme.Widget.TextView.SemiBold"
                        android:layout_centerVertical="true"
                        android:text="@string/privacy_statement"
                        android:textSize="@dimen/_13ssp"
                        android:textColor="@color/blue_11" />

                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_next" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_below="@id/tv_privacy_statement"
                        android:layout_marginTop="@dimen/_14sdp"
                        android:background="@color/disabled_tab_border" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_feedback"
                    style="@style/settings_option_container">

                    <TextView
                        android:id="@+id/tv_feedback"
                        style="@style/AppTheme.Widget.TextView.SemiBold"
                        android:layout_centerVertical="true"
                        android:text="@string/feedback"
                        android:textSize="@dimen/_13ssp"
                        android:textColor="@color/blue_11" />

                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_next" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_below="@id/tv_feedback"
                        android:layout_marginTop="@dimen/_14sdp"
                        android:background="@color/disabled_tab_border" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/tv_logout"
        style="@style/AppTheme.Widget.TextView.ExtraBold"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/ll_ads_view"
        android:layout_marginBottom="@dimen/_40sdp"
        android:text="@string/log_out"
        android:textColor="@drawable/blue_txt_selecter"
        android:textSize="@dimen/_14ssp" />

    <View
        android:id="@+id/ll_ads_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55sdp"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
</RelativeLayout>
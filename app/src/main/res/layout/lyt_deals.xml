<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/card_width"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_6sdp"
        android:layout_marginBottom="@dimen/_6sdp"
        app:cardBackgroundColor="@color/white_90"
        app:cardCornerRadius="@dimen/_15sdp"
        app:cardElevation="@dimen/_5sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/_12sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingEnd="@dimen/_12sdp"
            android:paddingBottom="@dimen/_15sdp">

            <LinearLayout
                android:id="@+id/lyt_deal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/iv_profile"
                        android:layout_width="@dimen/_27sdp"
                        android:layout_height="@dimen/_27sdp"
                        android:layout_gravity="center_vertical"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_placeholder_black"
                        app:riv_corner_radius="@dimen/_50sdp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_disp_name"
                            style="@style/AppTheme.Widget.TextView.ExtraBold"
                            android:layout_alignParentStart="true"
                            android:layout_gravity="start"
                            android:layout_marginStart="@dimen/_7sdp"
                            android:layout_marginEnd="@dimen/_7sdp"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:maxLines="2"
                            android:text="@string/corktown"
                            android:textColor="@color/blue_11"
                            android:textSize="@dimen/_13ssp" />
                    </RelativeLayout>


                </LinearLayout>

                <at.blogc.android.views.ExpandableTextView
                    android:id="@+id/tv_deal"
                    style="@style/AppTheme.Widget.TextView.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_34sdp"
                    android:layout_marginEnd="@dimen/_7sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:maxLines="4"
                    android:text="@string/deals_place_holder"
                    android:textColor="@color/blue_70"
                    android:textSize="@dimen/_11ssp"
                    app:animation_duration="500" />

                <TextView
                    android:id="@+id/expand_collapse"
                    style="@style/AppTheme.Widget.TextView.ExtraBold"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginEnd="@dimen/_7sdp"
                    android:text="@string/expand"
                    android:textColor="@color/blue_70"
                    android:textSize="@dimen/_11ssp" />

                <RelativeLayout
                    android:id="@+id/rl_profile_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_34sdp">

                    <TextView
                        android:id="@+id/tv_redeem"
                        style="@style/AppTheme.Widget.TextView.SemiBold"
                        android:layout_centerVertical="true"
                        android:text="@string/view_profile"
                        android:textColor="@color/green_47"
                        android:textSize="@dimen/_12sdp" />

                    <ImageView
                        android:id="@+id/iv_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:src="@drawable/arrow_green" />
                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>


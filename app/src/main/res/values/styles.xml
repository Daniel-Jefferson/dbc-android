<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- TEXT VIEW -->
    <style name="AppTheme.Widget.TextView" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="AppTheme.Widget.TextView.Transparent" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#B3FFFFFF</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="AppTheme.Widget.TextView.Bold" parent="AppTheme.Widget.TextView">
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="AppTheme.Widget.TextView.Black" parent="AppTheme.Widget.TextView">
        <item name="android:fontFamily">@font/montserrat_black</item>
    </style>

    <style name="AppTheme.Widget.TextView.SemiBold" parent="AppTheme.Widget.TextView">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="AppTheme.Widget.TextView.ExtraBold" parent="AppTheme.Widget.TextView">
        <item name="android:fontFamily">@font/montserrat_extrabold</item>
    </style>

    <style name="AppTheme.Widget.TextView.Medium" parent="AppTheme.Widget.TextView">
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>
    
    <style name="TextView_Dispo_Contact" parent="AppTheme.Widget.TextView.SemiBold">
        <item name="android:textColor">@color/blue_11</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginTop">@dimen/_3sdp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="Layout_Options" parent="android:Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/options_bg_selecter</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:layout_marginStart">@dimen/_12sdp</item>
        <item name="android:layout_marginEnd">@dimen/_12sdp</item>
    </style>

    <style name="TextView_Options" parent="AppTheme.Widget.TextView.SemiBold" >
        <item name="android:paddingBottom">@dimen/_1sdp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <!--EDIT TEXT-->
    <style name="AppTheme.Widget.EditText" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="android:textColorHint">@color/white_t70</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:layout_marginStart">@dimen/_25sdp</item>
        <item name="android:layout_marginEnd">@dimen/_25sdp</item>
        <item name="android:paddingStart">@dimen/_15sdp</item>
        <item name="android:paddingEnd">@dimen/_15sdp</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/ic_et_bg</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">textCapWords|textCapSentences</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="Apptheme.Widget.EditText.Search" parent="AppTheme.Widget.EditText">
        <item name="android:imeOptions">actionSearch</item>
    </style>

    <style name="Alert_EditText" parent="AppTheme.Widget.EditText">
        <item name="android:textColorHint">@color/confirm_hint</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/alert_et</item>
    </style>


    <!--BUTTON-->
    <style name="AppTheme.Widget.Button" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_48sdp</item>
        <item name="android:background">@drawable/all_buttons_selector</item>
        <item name="android:textColor">@color/blue_23</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:paddingLeft">@dimen/_20sdp</item>
        <item name="android:paddingRight">@dimen/_20sdp</item>
        <item name="android:paddingBottom">@dimen/_2sdp</item>
        <item name="android:fontFamily">@font/montserrat_extrabold</item>
        <item name="android:layout_marginStart">@dimen/_25sdp</item>
        <item name="android:layout_marginEnd">@dimen/_25sdp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Alert_Button" parent="AppTheme.Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/alert_btn_selecter</item>
    </style>

    <style name="AppTheme.Widget.Button.Transparent" parent="AppTheme.Widget.Button">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textColor">@color/white</item>
    </style>8

    <style name="AppTheme.Widget.Button.Orange.Border" parent="AppTheme.Widget.Button">
        <item name="android:layout_height">@dimen/_43sdp</item>
        <item name="android:background">@drawable/all_orange_buttons_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">@dimen/_28sdp</item>
        <item name="android:layout_marginEnd">@dimen/_28sdp</item>
    </style>

    <style name="AppTheme.Widget.White.Button.Border" parent="AppTheme.Widget.Button.Orange.Border">
        <item name="android:textColor">@color/blue_11</item>
        <item name="android:background">@drawable/white_trans_btn_selecter</item>
    </style>

    <style name="AppTheme.Widget.Tab.Container" parent="android:Widget">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
    </style>

    <style name="AppTheme.Widget.Tab.Icon" parent="android:Widget">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/white_70</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginTop">@dimen/_13sdp</item>
    </style>

    <style name="AppTheme.Widget.Tab.Text" parent="AppTheme.Widget.TextView.SemiBold">
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:textColor">@drawable/tabs_text_selecter</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">@dimen/_5sdp</item>
    </style>

    <style name="settings_option_container">
        <item name="android:layout_marginStart">@dimen/_15sdp</item>
        <item name="android:layout_marginEnd">@dimen/_15sdp</item>
        <item name="android:paddingTop">@dimen/_6sdp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="profile_settings_tv" parent="AppTheme.Widget.TextView.SemiBold">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:layout_marginStart">@dimen/_20sdp</item>
        <item name="android:textColor">@color/green_47</item>
    </style>

    <style name="profiel_settings_et" >
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">@color/grey_85</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:layout_marginBottom">@dimen/_10sdp</item>
        <item name="android:paddingStart">@dimen/_20sdp</item>
        <item name="android:paddingTop">@dimen/_13sdp</item>
        <item name="android:paddingBottom">@dimen/_13sdp</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:background">@color/white_90</item>
        <item name="android:textColor">@color/blue_11</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="DialogThemeLight" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/blue_23</item>
    </style>

    <style name="FullScreen.Dialog.Theme" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


</resources>
